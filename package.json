{
  "name": "react-spotify-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for React Spotify Frontend and Express API",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:api": "npm run dev --prefix api",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "format": "prettier --write \"frontend/**/*.{js,jsx,ts,tsx}\" \"api/**/*.{js,ts}\"",
    "format:check": "prettier --check \"frontend/**/*.{js,jsx,ts,tsx}\" \"api/**/*.{js,ts}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.x.x",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2"
  },
  "dependencies": {}
}
